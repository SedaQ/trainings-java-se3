<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/10.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.trainings.javafx.controllers.UserViewDialogController">
	<rowConstraints>
		<RowConstraints minHeight="20.0" prefHeight="30.0" />
		<RowConstraints minHeight="20.0" prefHeight="30.0" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" />
		<RowConstraints minHeight="10.0" prefHeight="30.0" />
	</rowConstraints>
	<columnConstraints>
		<ColumnConstraints maxWidth="88.0" minWidth="10.0"
			prefWidth="83.0" />
		<ColumnConstraints maxWidth="167.0" minWidth="10.0"
			prefWidth="167.0" />
		<ColumnConstraints maxWidth="95.0" minWidth="0.0"
			prefWidth="0.0" />
		<ColumnConstraints maxWidth="95.0" minWidth="0.0"
			prefWidth="0.0" />
	</columnConstraints>
	<children>
		<Label text="photo">
			<GridPane.margin>
				<Insets left="10.0" />
			</GridPane.margin>
		</Label>
		<ImageView fx:id="userImageView" fitHeight="32.0"
			fitWidth="32.0" pickOnBounds="true" preserveRatio="true"
			GridPane.columnIndex="1" />
		<Label text="email" GridPane.rowIndex="1">
			<GridPane.margin>
				<Insets left="10.0" />
			</GridPane.margin>
		</Label>
		<TextField fx:id="emailTextField" alignment="CENTER"
			HBox.hgrow="ALWAYS" maxWidth="Infinity" GridPane.columnIndex="1"
			GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
			<GridPane.margin>
				<Insets />
			</GridPane.margin>
		</TextField>
		<Label text="nickname" GridPane.rowIndex="2">
			<GridPane.margin>
				<Insets left="10.0" />
			</GridPane.margin>
		</Label>
		<TextField fx:id="nickNameTextField" alignment="CENTER"
			HBox.hgrow="ALWAYS" maxWidth="Infinity" GridPane.columnIndex="1"
			GridPane.rowIndex="2" />
		<Label text="first name" GridPane.rowIndex="3">
			<GridPane.margin>
				<Insets left="10.0" />
			</GridPane.margin>
		</Label>
		<TextField fx:id="firstNameTextField" alignment="CENTER"
			HBox.hgrow="ALWAYS" maxWidth="Infinity" GridPane.columnIndex="1"
			GridPane.rowIndex="3" />
		<Label text="surname" GridPane.rowIndex="4">
			<GridPane.margin>
				<Insets left="10.0" />
			</GridPane.margin>
		</Label>
		<TextField fx:id="surnameTextField" alignment="CENTER"
			HBox.hgrow="ALWAYS" maxWidth="Infinity" GridPane.columnIndex="1"
			GridPane.rowIndex="4" />
		<Label text="birthday" GridPane.rowIndex="5">
			<GridPane.margin>
				<Insets left="10.0" />
			</GridPane.margin>
		</Label>
		<HBox prefHeight="100.0" prefWidth="200.0"
			GridPane.columnIndex="1" GridPane.rowIndex="7">
			<children>
				<Button fx:id="cancelButton" minWidth="50.0"
					mnemonicParsing="false" onAction="#handleOnCancelAction"
					text="Cancel" HBox.hgrow="ALWAYS">
					<HBox.margin>
						<Insets left="60.0" top="15.0" />
					</HBox.margin>
				</Button>
			</children>
		</HBox>
		<Label text="adress id" GridPane.rowIndex="6">
			<GridPane.margin>
				<Insets left="10.0" />
			</GridPane.margin>
		</Label>
		<TextField fx:id="addressIdTextField" alignment="CENTER"
			HBox.hgrow="ALWAYS" maxWidth="Infinity" GridPane.columnIndex="1"
			GridPane.rowIndex="6" />
		<TextField fx:id="birthdayTextField" alignment="CENTER"
			HBox.hgrow="ALWAYS" maxWidth="Infinity" GridPane.columnIndex="1"
			GridPane.rowIndex="5" />
	</children>
	<padding>
		<Insets bottom="10.0" left="10.0" right="5.0" top="5.0" />
	</padding>
</GridPane>
